{
  "$schema": "https://form-input-schema.json-schema.sodaru.com/meta-schemas/input.json",
  "$id": "https://form-input-schema.json-schema.sodaru.com/schemas/multiline-text.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["type"],
  "properties": {
    "type": { "const": "multiline-text" },
    "label": { "type": "string" },
    "default": { "type": "string" },
    "helpText": {
      "type": "string",
      "description": "Input helptext with markdown support",
      "maxLength": 2048
    },
    "minLength": { "type": "number" },
    "maxLength": { "type": "number" },
    "pattern": { "type": "string", "format": "regex" },
    "markdown": { "type": "boolean" }
  }
}
