{
  "$schema": "https://form-input-schema.json-schema.sodaru.com/meta-schemas/input.json",
  "$id": "https://form-input-schema.json-schema.sodaru.com/schemas/password.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["type"],
  "properties": {
    "type": { "const": "password" },
    "label": { "type": "string" },
    "default": {
      "const": "",
      "description": "No default value to be provided for password type"
    },
    "helpText": {
      "type": "string",
      "description": "Input helptext with markdown support",
      "maxLength": 2048
    },
    "minLength": { "type": "number" },
    "maxLength": { "type": "number" },
    "pattern": { "type": "string", "format": "regex" }
  }
}
