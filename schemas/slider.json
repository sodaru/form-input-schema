{
  "$schema": "https://form-input-schema.json-schema.sodaru.com/meta-schemas/input.json",
  "$id": "https://form-input-schema.json-schema.sodaru.com/schemas/slider.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "minimum", "maximum"],
  "properties": {
    "type": { "const": "slider" },
    "label": { "type": "string" },
    "default": {
      "oneOf": [
        { "type": "number" },
        {
          "type": "array",
          "additionalItems": false,
          "items": [{ "type": "number" }, { "type": "number" }],
          "minItems": 2
        }
      ]
    },
    "helpText": {
      "type": "string",
      "description": "Input helptext with markdown support",
      "maxLength": 2048
    },
    "minimum": { "type": "number" },
    "maximum": { "type": "number" },
    "range": { "type": "boolean" },
    "verticle": { "type": "boolean" },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["value", "label"],
        "properties": {
          "value": { "type": "number" },
          "label": { "type": "string" }
        }
      }
    }
  }
}
