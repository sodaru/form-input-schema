{
  "$schema": "https://form-input-schema.json-schema.sodaru.com/meta-schemas/input.json",
  "$id": "https://form-input-schema.json-schema.sodaru.com/schemas/checkbox-group.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["type"],
  "properties": {
    "type": { "const": "checkbox-group" },
    "label": { "type": "string" },
    "default": {
      "type": "array",
      "items": { "type": "string" }
    },
    "helpText": {
      "type": "string",
      "description": "Input helptext with markdown support",
      "maxLength": 2048
    },
    "options": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["value", "label"],
            "properties": {
              "value": { "type": "string" },
              "label": { "type": "string" }
            }
          }
        ]
      },
      "maxItems": 10,
      "uniqueItems": true
    }
  }
}
