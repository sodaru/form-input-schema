{
  "$schema": "https://form-input-schema.json-schema.sodaru.com/meta-schemas/input.json",
  "$id": "https://form-input-schema.json-schema.sodaru.com/schemas/select.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "name"],
  "properties": {
    "type": { "const": "select" },
    "name": { "type": "string" },
    "label": { "type": "string" },
    "default": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ]
    },
    "options": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["value", "label"],
            "properties": {
              "value": { "type": "string" },
              "label": { "type": "string" }
            }
          }
        ]
      }
    },
    "optionsUrl": {
      "type": "string",
      "description": "The url which returns options, optionally takes a query parameter 'q'. Access to the url needs to be handled by UI implementations"
    },
    "multiple": {
      "type": "boolean"
    },
    "allowFreeText": {
      "type": "boolean"
    }
  }
}
