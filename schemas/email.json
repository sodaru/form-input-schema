{
  "$schema": "https://form-input-schema.json-schema.sodaru.com/meta-schemas/input.json",
  "$id": "https://form-input-schema.json-schema.sodaru.com/schemas/email.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "name"],
  "properties": {
    "type": { "const": "email" },
    "name": { "type": "string" },
    "label": { "type": "string" },
    "default": { "type": "string", "format": "email" },
    "minLength": { "type": "number" },
    "maxLength": { "type": "number" },
    "pattern": { "type": "string", "format": "regex" }
  }
}
