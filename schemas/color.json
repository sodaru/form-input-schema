{
  "$schema": "https://form-input-schema.json-schema.sodaru.com/meta-schemas/input.json",
  "$id": "https://form-input-schema.json-schema.sodaru.com/schemas/color.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["type"],
  "properties": {
    "type": { "const": "color" },
    "label": { "type": "string" },
    "default": { "type": "string", "pattern": "^#[a-f0-9]{6,8}$" },
    "helpText": {
      "type": "string",
      "description": "Input helptext with markdown support",
      "maxLength": 2048
    },
    "alpha": { "type": "boolean" }
  }
}
